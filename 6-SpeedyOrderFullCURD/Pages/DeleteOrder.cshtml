@page "{id:int}"
@model SpeedyOrderPages.Pages.DeleteOrderModel
@{
    ViewData["Title"] = "Delete Order";
}

<div class="container mt-4">
    <h1>Delete Order</h1>
    <p>Are you sure you want to delete order: <strong>@Model.Order.OrderName</strong>?</p>
    <form method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="/Orders" class="btn btn-secondary">Cancel</a>
    </form>
</div>
