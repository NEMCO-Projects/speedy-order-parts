@page
@model SpeedyOrderPages.Pages.OrderModel
@{
    ViewData["Title"] = "Place Order";
}

<div class="container mt-4">
    <h1>Place Your Order</h1>
    <form method="post">
        <div class="mb-3">
            <label asp-for="OrderName" class="form-label">Name</label>
            <input asp-for="OrderName" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="OrderItem" class="form-label">Item</label>
            <input asp-for="OrderItem" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Quantity" class="form-label">Quantity</label>
            <input asp-for="Quantity" class="form-control" type="number" min="1" />
        </div>
        <button type="submit" class="btn btn-primary">Submit Order</button>
    </form>

    @if (Model.Submitted)
    {
        <div class="alert alert-success mt-3">
            Order submitted! <br />
            Name: @Model.OrderName <br />
            Item: @Model.OrderItem <br />
            Quantity: @Model.Quantity
        </div>
    }
</div>
